{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/fedora-21/ks-openstack-ppc64le.cfg<enter><wait>"
      ],
      "accelerator": "kvm",
      "boot_wait": "10s",
      "disk_size": 2048,
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "6a44389959e890e1543af69ea556e02ea24f3b0e9d70a7426698df40e6128f9c",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `mirror`}}/fedora-secondary/releases/21/Server/ppc64le/iso/Fedora-Server-DVD-ppc64le-21.iso",
      "output_directory": "packer-fedora-21-ppc64le-openstack",
      "qemuargs": [ [ "-m", "1024m" ] ],
      "qemu_binary": "qemu-kvm",
      "shutdown_command": "echo 'fedora'|sudo -S /sbin/halt -h -p",
      "ssh_password": "fedora",
      "ssh_port": 22,
      "ssh_username": "fedora",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "packer-fedora-21-ppc64le"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "CHEF_VERSION={{user `chef_version`}}"
      ],
      "execute_command": "echo 'fedora' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/fedora/fix-slow-dns.sh",
        "scripts/common/sshd.sh",
        "scripts/common/vmtools.sh",
        "scripts/common/chef.sh",
        "scripts/fedora/openstack.sh",
        "scripts/common/serial-hvc1.sh",
        "scripts/fedora/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "chef_version": "provisionerless",
    "mirror": "http://mirror.chpc.utah.edu/pub/"
  }
}
